#bloc_page{
	margin:0;
	padding:0;
	height:100%;
	width:100%;
}

/* marge pour que le premier container (id="aftertopmenu")situé après le menu du haut container ne se retrouve pas caché par lui */
#aftertopmenu {
	margin-top:4em;
	margin-bottom:2em;
	padding:0;
	min-height:100%; //bugfix : min-height au lieu de height --> adaptatif et permet de fixer footer en bas sans pb d'affichage
	/*background-color: #ff7f50;*/ /*pour debug*/
}

/* marge pour que menu de gauche (id="leftmenu")situé après le menu du haut container ne se retrouve pas caché par lui */
#leftmenu{
	margin-top:18em;
	margin-right:0em;
	margin-left:0;
	padding:0;
}
#centermenu{
	margin-right:6em;
}
#rightmenu{
	margin-top:18em;
	margin-left:0em;
}
#gridfooter{
	margin-right:3.5em; /*alignement parfait avec limites grid central plus haut. Ratio 16:9*/
}
h4{
	text-align:center;
	font-size:x-small;
	color:grey;
	margin:0;
	padding:0;
}
#footerlogo{
	width: 12%;
	display:block;
	margin-left: auto;
	margin-right: auto;
	margin-top:0em;
	margin-bottom:0em;
	
}
#lignefooter{
	margin-top:3em;
	margin-bottom:1em;
	padding:0;
}
//logo Anses du header qui grossit au survol
#logogrow:hover,#helpgrow:hover{
  -moz-transform: scale(1.2);
  -webkit-transform: scale(1.2);
  transform: scale(1.2);
 }
#texthover:hover{
  color:#00B5AD;
 }
 
#centermenu{
    display: block;
    margin-left: 5em;
}
/* +1em as regard as #aftertopmenu margin-top */
#datatables_header{
    margin-top: 1em;
}
/* Datatable's header size (header example :"Salmonella genomes")*/
.datatables_header_text{
    color:#2C3E50;
    font-size: 1.5em;
}
/* redefine buttons colors generated by buttons.semanticui.min.js */ 
a.paginate_button.item.active,div.paginate_button.item.previous.disabled{
    color:#FABD38 !important;
}
div.paginate_button.item.previous.disabled,div.paginate_button.item.next.disabled{
    color: darkgrey !important;
}
